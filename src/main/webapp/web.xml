<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>org.example.controller.WelcomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>sortingController</servlet-name>
        <servlet-class>org.example.controller.sorting.SelectionSortController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sortingController</servlet-name>
        <url-pattern>/selection</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>shallowSort</servlet-name>
        <servlet-class>org.example.controller.sorting.ShellSortController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>shallowSort</servlet-name>
        <url-pattern>/shell</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>quickSort</servlet-name>
        <servlet-class>org.example.controller.sorting.QuickSortController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>quickSort</servlet-name>
        <url-pattern>/quick</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>mergeSort</servlet-name>
        <servlet-class>org.example.controller.sorting.MergeSortController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>mergeSort</servlet-name>
        <url-pattern>/merge</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>countingSort</servlet-name>
        <servlet-class>org.example.controller.sorting.CountingSortController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>countingSort</servlet-name>
        <url-pattern>/counting</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>three</servlet-name>
        <servlet-class>org.example.controller.datastructures.BinarySearchThreeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>three</servlet-name>
        <url-pattern>/three</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>kmpAlgorithm</servlet-name>
        <servlet-class>org.example.controller.search.KMPAlgorithmController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>kmpAlgorithm</servlet-name>
        <url-pattern>/kmpAlgorithm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>binarySearch</servlet-name>
        <servlet-class>org.example.controller.search.BinarySearchController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>binarySearch</servlet-name>
        <url-pattern>/binarySearch</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>boyerMoore</servlet-name>
        <servlet-class>org.example.controller.search.BoyerMooreSearchController</servlet-class>
    </servlet>


    <servlet>
        <servlet-name>stack</servlet-name>
        <servlet-class>org.example.controller.datastructures.StackController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>stack</servlet-name>
        <url-pattern>/stack</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>boyerMoore</servlet-name>
        <url-pattern>/boyerMooreSearch</url-pattern>
    </servlet-mapping>

</web-app>
